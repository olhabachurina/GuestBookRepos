<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - GuestBook</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Segoe+UI:wght@400;700&display=swap" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg shadow-md">
        <a class="navbar-brand text-white text-2xl" href="/">GuestBook</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                @if (Context.Session.GetInt32("UserId") == null)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Login">Вход</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Register">Регистрация</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Logout">Выход</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/MyReviews">Мои сообщения</a>
                    </li>
                }
            </ul>
        </div>
    </nav>
    <div class="container mx-auto mt-5 animate-fade-in">
        @RenderBody()
    </div>
    <footer class="mt-5">
        <p>© 2024 GuestBook. Все права защищены.</p>
        <a href="#">Privacy Policy</a>
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.5.4/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>